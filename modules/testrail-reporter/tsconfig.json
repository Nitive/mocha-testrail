{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2015", "es2015.promise"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es2018",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./types"]
  }
}
